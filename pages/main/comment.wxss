page {
    background: #fafafa;
    color: #333;
    font-weight: 500;
    padding-bottom: 40rpx;
    box-sizing: border-box;
}

.successbox {
    width: 100vw;
    height: 100vh;
    background: #fafafa;
}

.page-top {
    background: #FFDB09;
    color: #242627;
    height: 310rpx;
    padding: 40rpx 50rpx;
    box-sizing: border-box;
    border: 0;
}

.iconbox {
    font-size: 40rpx;
    line-height: 1;
    text-align: center;
    font-weight: 600;
}

.topbtn {
    width: 220rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 40rpx;
    border: 1rpx solid #242627;
    box-sizing: border-box;
    font-size: 28rpx;
}

.successicon {
    width: 40rpx;
    height: 40rpx;
    border-radius: 100%;
    margin-right: 10rpx;
}

.desc {
    font-size: 24rpx;
    margin-top: 40rpx;
    text-align: center;
    color: #aaa;
}

.page-content {
    position: absolute;
    width: 670rpx;
    left: 50%;
    top: 260rpx;
    transform: translate(-50%, 0);
    background: #fff;
    border: 1rpx solid #f1f1f1;
    border-radius: 10rpx;
    padding: 50rpx 20rpx;
}

.giftbox {
    text-align: center;
    font-size: 24rpx;
    border-radius: 10rpx;
    box-sizing: border-box;
}

.giftTitle {
    font-size: 24rpx;
    margin-bottom: 40rpx;
}

.giftcells {
    display: flex;
    margin: 10rpx auto;
    border-radius: 10rpx;
    font-size: 24rpx;
}

.giftcell {
    flex: 1;
    width: 200rpx;
    margin-right: 10rpx;
}

.giftcell image {
    height: 80rpx;
    width: 86rpx;
}

.giftcell:nth-last-child(1) {
    margin-right: 0;
}

.btnbox {
    position: absolute;
    left: 50%;
    bottom: -240rpx;
    transform: translate(-50%, 0);
    background: #1a171a;
    font-size: 32rpx;
    color: #fff;
    width: 600rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-radius: 10rpx;
}

.descbox {
    width: 480rpx;
    text-align: center;
    font-size: 24rpx;
    margin: 40rpx auto;
}

.papers {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}

.paper {
    height: 200rpx;
    width: 200rpx;
    border-radius: 4rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    background-color: #fafafa;
}

.paper:nth-child(3n) {
    margin-right: 0
}

.commentbox {
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 40rpx;
    border-bottom: 1rpx solid #f1f1f1;
    box-sizing: border-box;
}

.commentbox-lf {
    display: flex;
    align-items: center;
}

.commentbox-lf image {
    width: 40rpx;
    height: 40rpx;
    border-radius: 40rpx;
    margin-right: 6rpx;
}

.commentbox-rt {
    display: flex;
    align-items: center;
}

.commentbox-rt image {
    width: 24rpx;
    height: 30rpx;
    margin-right: 6rpx;
    font-size: 0;
    margin-bottom: 4rpx;
}

.addbtn {
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    color: #cfcfcf;
    border: 2rpx dashed #aaa;
    font-size: 24rpx;
    height: 200rpx;
    width: 200rpx;
    border-radius: 4rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    background-color: #fafafa;
}

.submitbtn {
    width: 600rpx;
    height: 100rpx;
    line-height: 100rpx;
    margin-top: 100rpx;
    background: #1a171a;
    color: #fff;
}

.welcomebox {
    padding: 30rpx;
    min-height: 100vh;
    box-sizing: border-box;
    text-align: center;
    color: #333;
}

.boxtitle {
    font-size: 32rpx;
    font-weight: bold;
}

.boxdesc {
    font-size: 24rpx;
    color: #aaa;
    margin-top: 50rpx;
}

.welcomebox image {
    width: 232rpx;
    height: 232rpx;
    display: block;
    margin: 100rpx auto 0;
}

.commentbtn {
    width: 600rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    position: absolute;
    left: 50%;
    transform: translate(-50%, 0);
    background: #1a171a;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    border-radius: 10rpx;
    margin-top: 120rpx;
}

.pickbox {
    position: fixed;
    left: 0;
    bottom: 0;
    background: #fff;
}

.seletebox {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #f0f0f0;
    padding: 30rpx 30rpx;
    box-sizing: border-box;
}

.plusbox {
    width: 100rpx;
    height: 100rpx;
    background: rgba(255, 219, 9, 0.2);
    border-radius: 6rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.plusbox image {
    width: 44rpx;
    height: 44rpx;
}

.signbox {
    width: 690rpx;
    height: 120rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    box-sizing: border-box;
    position: relative;
    background: rgba(255, 219, 9, .2);
    border-radius: 10rpx;
    line-height: 1;
    margin: 40rpx auto;
    border-radius: 10rpx;
}

.signbox_left {
    display: flex;
    align-items: center;
}

.signbox_left image {
    width: 42rpx;
    height: 36rpx;
    margin-right: 14rpx;
}

.signbtn {
    height: 52rpx;
    padding: 0 16rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 52rpx;
    border-radius: 26rpx;
    font-size: 22rpx;
    background: #ffdb09;
    color: #242627;
    font-weight: 500;
}