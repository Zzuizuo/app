.content {
    min-height: 100vh;
    padding: 0 30rpx 60rpx 30rpx;
    box-sizing: border-box;
}

.pagetop {
    width: 690rpx;
    padding: 14rpx 0;
    box-sizing: border-box;
    position: relative;
}

.pagemiddle {
    width: 690rpx;
    margin-top: 26rpx;
}

.listbox {
    margin-top: 40rpx;
}

.listcell {
    width: 100%;
    height: 200rpx;
    border-radius: 4rpx;
    display: flex;
    position: relative;
    background: #FFFBFA;
    margin-top: 30rpx;
    box-shadow: 0 0 10rpx #e6e6e6;
}

.listcell::before {
    content: '';
    position: absolute;
    left: -15rpx;
    background: #fff;
    top: 50%;
    transform: translate(0, -50%);
    width: 30rpx;
    height: 30rpx;
    border-radius: 100%;
    z-index: 100;
}

.listcell::after {
    content: '';
    position: absolute;
    right: -15rpx;
    top: 50%;
    transform: translate(0, -50%);
    width: 30rpx;
    height: 30rpx;
    border-radius: 100%;
    background: #fff;
    box-shadow: 0 0 10rpx #e6e6e6 inset;
}

.circlecover {
    position: absolute;
    right: -15rpx;
    top: 50%;
    transform: translate(0, -50%);
    width: 15rpx;
    height: 30rpx;
    background: #fff;
    z-index: 10;
}

.cellleft {
    width: 220rpx;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    background: #FF764C;
    color: #fff;
}

.cellleft image {
    width: 6rpx;
    height: 194rpx;
    position: absolute;
    top: 3rpx;
    right: -3rpx;
}

.sale {
    line-height: 1;
}

.condition {
    line-height: 1.2;
    font-size: 24rpx;
    margin-top: 20rpx;
}

.cellright {
    width: 470rpx;
    height: 200rpx;
    padding: 30rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.name {
    font-size: 32rpx;
    max-width: 360rpx;
    color: #242627;
    line-height: 1.2;
    font-weight: 500;
}

.time {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 390rpx;
    font-size: 24rpx;
    margin-top: 30rpx;
    line-height: 1;
    color: #999;
}

.shop {
    max-width: 360rpx;
    font-size: 24rpx;
    color: #999;
    margin-top: 20rpx;
    line-height: 1;
}

.creatbtn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 690rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    background: #FFDB09;
    margin: 0 auto;
    border-radius: 40rpx;
    text-align: center;
}

.creatbtn image {
    width: 24rpx;
    height: 24rpx;
    margin-right: 10rpx;
}

.nodatatips {
    font-size: 28rpx;
    color: #999;
    margin-top: 70rpx;
    line-height: 1.2;
    text-align: center;
}

.dazhesale {
    display: flex;
}

.using {
    color: #FF4925;
}