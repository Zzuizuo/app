.content {
    min-height: 100vh;
    padding: 0 30rpx 60rpx 30rpx;
    box-sizing: border-box;
}

.pagetop {
    width: 690rpx;
    padding: 14rpx 0;
    box-sizing: border-box;
    position: relative;
}

.pagemiddle {
    width: 690rpx;
    margin-top: 26rpx;
}

.nodatatips {
    font-size: 28rpx;
    color: #999;
    margin-top: 70rpx;
    line-height: 1.2;
    text-align: center;
}

.listbox {
    margin-top: 40rpx;
}

.listcell {
    width: 100%;
    height: 180rpx;
    border-radius: 10rpx;
    display: flex;
    position: relative;
    background: #fff;
    margin-top: 30rpx;
    box-shadow: 0 0 10rpx #e6e6e6;
}

.cellleft {
    padding: 0 30rpx;
    box-sizing: border-box;
    width: 510rpx;
    height: 180rpx;
    display: flex;
    align-items: center;
}

.imagebox {
    width: 120rpx;
    height: 120rpx;
    border-radius: 2rpx;
}

.imagebox image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 2rpx;
}

.infobox {
    max-width: 300rpx;
    height: 120rpx;
    font-size: 32rpx;
    margin-left: 32rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-top: 10rpx;
    box-sizing: border-box;
}

.name {
    max-width: 300rpx;
    line-height: 1.2;
}

.shop {
    max-width: 300rpx;
    line-height: 1.2;
    font-size: 24rpx;
    color: #999;
}

.time {
    font-size: 24rpx;
    line-height: 1;
}

.cellright {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    position: relative;
}

.cellright::after {
    content: '';
    position: absolute;
    top: 30rpx;
    left: 0;
    bottom: 30rpx;
    border-left: 1rpx solid #f0f0f0;
}

.nodatatips {
    font-size: 28rpx;
    color: #999;
    margin-top: 70rpx;
    line-height: 1.2;
    text-align: center;
}

.statusbtn {
    width: 120rpx;
    height: 52rpx;
    border-radius: 26rpx;
    background: #FF4925;
    text-align: center;
    line-height: 52rpx;
    color: #fff;
    font-size: 24rpx;
}