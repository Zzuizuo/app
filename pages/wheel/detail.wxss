page {
    box-sizing: border-box;
    background: #FEDB89;
}

view {
    padding: 0;
    margin: 0;
}

.main {
    position: relative;
    min-height: 100vh;
    padding-top: 400rpx;
    box-sizing: border-box;
}

.rulebox {
    position: fixed;
    top: 8rpx;
    right: 0;
    width: 80rpx;
    height: 44rpx;
    border-top-left-radius: 22rpx;
    border-bottom-left-radius: 22rpx;
    background: #FE880E;
    color: #fff;
    font-size: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
}

.swiperbox {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 60rpx;
}

.tipsbox {
    width: 100vw;
    height: 60rpx;
    background: rgba(0, 0, 0, .2);
    z-index: 20;
    display: flex;
    align-items: center;
    padding-left: 30rpx;
    box-sizing: border-box;
    font-size: 20rpx;
    color: #fff;
    z-index: 5;
}

.userheadimg {
    width: 40rpx;
    height: 40rpx;
    border-radius: 100%;
}

.wheelbg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    min-height: 100vh;
}

.wheelbg-top {
    position: absolute;
    top: 80rpx;
    left: 50%;
    transform: translate(-50%, 0);
    width: 572rpx;
    height: auto;
    z-index: 10;
}

.wheelbg-top image {
    width: 572rpx;
    height: 178rpx;
    display: block;
}

.wheeltimes {
    font-size: 32rpx;
    color: #fff;
    margin-top: 30rpx;
    text-align: center;
    line-height: 1;
    font-weight: bold;
}

.wheelbg-center {
    position: absolute;
    top: 240rpx;
    left: 0;
    width: 100vw;
    height: 865rpx;
}

.wheelbg-center image {
    width: 100vw;
    height: 865rpx;
}

.wheelbg-bottom {
    position: absolute;
    left: 0;
    top: 896rpx;
    width: 100vw;
    height: 138rpx;
}

.wheelbg-bottombg {
    position: absolute;
    bottom: 0;
    width: 100vw;
    height: 138rpx;
    z-index: -2;
}

.wheeltable {
    position: absolute;
    width: 280rpx;
    height: 96rpx;
    top: 30rpx;
    left: 50%;
    transform: translate(-50%, 0);
    z-index: -1;
}

.wheelgirl {
    position: absolute;
    width: 118rpx;
    height: 230rpx;
    top: -90rpx;
    right: 48rpx;
    z-index: 5;
}

.wheelgifticon {
    position: absolute;
    width: 184rpx;
    height: 128rpx;
    top: 18rpx;
    left: 80rpx;
    z-index: 5;
}

.wheeloutbox {
    position: relative;
    margin: 0 auto;
    width: 520rpx;
    height: 520rpx;
    box-sizing: border-box;
}

.wheeloutbox-bg {
    width: 600rpx;
    height: 600rpx;
    position: absolute;
    top: -40rpx;
    left: -40rpx;
}

.wheeloutbox-bg image {
    position: absolute;
    top: 0;
    left: 0;
    width: 600rpx;
    height: 600rpx;
    z-index: 3;
}

.wheelbox {
    position: relative;
    width: 520rpx;
    height: 520rpx;
    border-radius: 50%;
    overflow: hidden;
    z-index: 10;
}

.wheelcell {
    overflow: hidden;
    position: absolute;
    top: 0;
    right: 0;
    width: 50%;
    height: 50%;
    transform-origin: 0% 100%;
    background: #fcf9f0;
}

.wheelcell:nth-child(2n) {
    background: #ffeaa7;
}

.wheeltextbox {
    position: absolute;
    top: 0;
    right: 0;
    width: 50%;
    height: 50%;
    transform-origin: 0% 100%;
}

.wheeltext {
    transform-origin: 0 0;
    text-align: center;
    font-size: 24rpx;
    color: #ff4925;
    line-height: 1.2;
    padding: 30rpx 30rpx 0;
    box-sizing: border-box;
    font-weight: bold;
}

.wheelbtn {
    width: 206rpx;
    height: 248rpx;
    text-align: center;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -60%);
    z-index: 11;
}

.wheelbtn image {
    width: 206rpx;
    height: 248rpx;
    display: block;
    z-index: 11;
}

.wheelbtn-txt {
    width: 72rpx;
    height: 72rpx;
    line-height: 1.2;
    position: absolute;
    top: 100rpx;
    left: 50%;
    transform: translate(-50%, 0%);
    color: #fff;
    font-size: 32rpx;
    text-align: center;
}

.pagebottom {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100vw;
    background: #FEA549;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
}

.pagebtn {
    width: 400rpx;
    height: 80rpx;
    border-radius: 40rpx;
    background: #FE880E;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    line-height: 80rpx;
}

.awardbox {
    position: absolute;
    width: 540rpx;
    height: 766rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.awardbox image {
    width: 540rpx;
    height: 766rpx;
}

.convertbtn {
    position: absolute;
    bottom: 60rpx;
    right: 70rpx;
    width: 400rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    background: #FFDB09;
    font-size: 32rpx;
    border-radius: 40rpx;
}

.awardcontent {
    position: absolute;
    right: 56rpx;
    bottom: 268rpx;
    width: 434rpx;
    height: 374rpx;
}

.awardtext {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding-top: 20rpx;
    height: 260rpx;
    font-size: 50rpx;
    font-weight: bold;
    text-align: center;
    color: #ff4925;
    position: relative;
    line-height: 1;
}


