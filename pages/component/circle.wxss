.circle-model {
    width: 100%;
    height: auto;
    display: flex;
    padding: 30rpx 40rpx;
    background: #fff;
    box-sizing: border-box;
    position: relative;
}

.splitline {
    position: absolute;
    left: 30rpx;
    right: 30rpx;
    bottom: 0;
    border-bottom: 2rpx solid #f0f0f0;
}

.circle-img {
    width: 86rpx;
    height: 86rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
}

.circle-img image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.circle-content {
    width: 564rpx;
}

.circle-shop {
    width: 100%;
    padding-top: 14rpx;
    box-sizing: border-box;
}

.shopname {
    color: #576b95;
    font-size: 32rpx;
    max-width: 580rpx;
    line-height: 1.2;
    font-weight: bold;
}

.circle-info {
    color: #333;
    font-size: 32rpx;
    margin-top: 10rpx;
}

.circle-txt {
    display: block;
    line-height: 1.6;
    position: relative;
}

.ios_limitHeight {
    max-height: 340rpx;
    overflow: hidden;
}

.android_limitHeight {
    max-height: 340rpx;
    overflow: hidden;
}


