.addressbox {
    font-size: 24rpx;
    color: #576b95;
    margin-top: 16rpx;
    display: flex;
    align-items: center;
    line-height: 1;
}

.addressbox image {
    width: 24rpx;
    height: 24rpx;
    margin-right: 10rpx;
}

.timebox {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 20rpx;
}

.action {
    background-color: #f7f7f7;
    font-weight: bolder;
    color: #576b95;
    text-align: center;
    height: 40rpx;
    width: 60rpx;
    border-radius: 8rpx;
    font-weight: bolder;
    font-size: 32rpx;
    line-height: 40rpx;
}

.replys {
    padding: 10rpx 20rpx 20rpx 20rpx;
    box-sizing: border-box;
    background-color: #f3f3f5;
}

.reply {
    width: 100%;
    margin-top: 10rpx;
    box-sizing: border-box;
    word-wrap: break-word;
    /* word-break: break-all; */
}

.reply:first-of-type {
    margin-top: none;
}

.nowrap {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}